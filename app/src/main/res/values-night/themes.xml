<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyOrangeFit" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FF9800</item>
        <item name="colorPrimaryVariant">#DF6310</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FFC107</item>
        <item name="colorSecondaryVariant">#FFEB3B</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/trasparent</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/trasparent</item>
        <item name="android:buttonTint">#FF9800</item>
        <item name="fontFamily">@font/comfortaa</item>

    </style>

    <!-- Stile personalizzato per CardView -->
    <style name="CardViewStyle">
        <item name="android:padding">16dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">#202020</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:drawableTint">@color/primary</item>
        <item name="android:background">@color/trasparent</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
    </style>
</resources>