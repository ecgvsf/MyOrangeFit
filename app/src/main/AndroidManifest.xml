<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyOrangeFit"
        tools:targetApi="31">
        <activity
            android:name=".Repetitions"
            android:exported="false"
            android:label="@string/title_activity_repetitions"
            android:theme="@style/Theme.MyOrangeFit" />
        <activity
            android:name=".SeriesActivity"
            android:exported="false" />
        <activity
            android:name=".Scale"
            android:exported="false"
            android:label="@string/title_activity_scale"
            android:theme="@style/Theme.MyOrangeFit" />
        <activity
            android:name=".Clock"
            android:exported="false"
            android:label="@string/title_activity_clock"
            android:theme="@style/Theme.MyOrangeFit" />
        <activity
            android:name=".ExerciseSelectionActivity"
            android:exported="false" />
        <activity
            android:name=".BodyPartActivity"
            android:exported="false" />
        <activity
            android:name=".AddWorkoutTypeActivity"
            android:exported="false" />
        <activity
            android:name=".ManageWorkoutActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>